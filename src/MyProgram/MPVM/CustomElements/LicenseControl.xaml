<UserControl x:Class="MyProgram.MPVM.CustomElements.LicenseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyProgram.MPVM.CustomElements"
             mc:Ignorable="d">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Background="White" Opacity="0.8" Padding="20" CornerRadius="10" MaxWidth="500">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Лицензионное соглашение" FontWeight="Bold" FontSize="20" Margin="0,0,0,20" TextAlignment="Center"/>
                <TextBlock Text="Содержимое лицензионного соглашения... Содержимое лицензионного соглашения... Содержимое лицензионного соглашения... Содержимое лицензионного соглашения..." TextWrapping="Wrap" Margin="0,0,0,20" TextAlignment="Center"/>
                <Button Content="Принять" Width="100" Click="AcceptButton" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
