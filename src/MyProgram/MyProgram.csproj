    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>app-icon.ico</ApplicationIcon>
    <ApplicationManifest>Resources\app.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Images\close-w-10.png" />
    <None Remove="Resources\Images\min-w-10.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="app-icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.122" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Images\close-w-10.png" />
    <Resource Include="Resources\Images\min-w-10.png" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="MPVM\UserControls\" />
    <Folder Include="MPVM\Models\" />
    <Folder Include="Core\" />
  </ItemGroup>

</Project>
